{
  "compilerOptions": {
    "target": "es2016",
    "experimentalDecorators": false,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "./lib",
    "strict": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": false,
    "noImplicitThis": true,
    "alwaysStrict": true
  },
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts"
  ]
}

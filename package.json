{
  "name": "matrix-events-sdk",
  "version": "0.0.1",
  "description": "JS/TS SDK for interacting with Matrix events",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": "git@github.com:matrix-org/matrix-events-sdk.git",
  "author": "The Matrix.org Foundation C.I.C.",
  "license": "Apache-2.0",
  "files": [
    "lib",
    "README.md",
    "package.json",
    "yarn.lock",
    "LICENSE"
  ],
  "scripts": {
    "prepare": "husky install",
    "prepublishOnly": "yarn build",
    "clean": "rimraf lib",
    "build": "yarn clean && tsc -p tsconfig.build.json",
    "start": "tsc -p tsconfig.build.json -w",
    "test": "jest",
    "format": "prettier --config .prettierrc \"{src,test}/**/*.ts\" --write",
    "lint": "tsc -p tsconfig.build.json --noEmit && prettier --config .prettierrc \"{src,test}/**/*.ts\" --check"
  },
  "devDependencies": {
    "@types/jest": "^29.2.3",
    "@types/node": "^16",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "prettier": "^2.8.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.3"
  }
}
